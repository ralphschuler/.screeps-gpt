{
  "mcpServers": {
    "screeps-mcp": {
      "command": "npx",
      "args": ["-y", "@ralphschuler/screeps-api-mcp@latest", "--token", "${SCREEPS_TOKEN}"],
      "env": {
        "SCREEPS_HOST": "${SCREEPS_HOST:-screeps.com}",
        "SCREEPS_SHARD": "${SCREEPS_SHARD:-shard3}"
      }
    }
  }
}
