{
  "mcpServers": {
    "screeps": {
      "type": "local",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "SCREEPS_TOKEN=$SCREEPS_TOKEN",
        "ghcr.io/ralphschuler/screeps-api-mcp:latest"
      ],
      "env": {
        "SCREEPS_TOKEN": "$SCREEPS_TOKEN"
      },
      "tools": ["*"]
    }
  }
}
