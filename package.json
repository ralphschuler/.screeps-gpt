{
  "name": "@ralphschuler/screeps-gpt",
  "version": "0.113.0",
  "description": "Autonomously evolving Screeps AI with automated development and deployment workflows.",
  "license": "MIT",
  "author": "OpenAI Automations",
  "type": "module",
  "main": "dist/main.js",
  "screeps_bot": true,
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ralphschuler/.screeps-gpt.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist/main.js",
    "dist/main.js.map",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0 <=22.x",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "tsx packages/utilities/scripts/build.ts",
    "build:no-profiler": "PROFILER_ENABLED=false tsx packages/utilities/scripts/build.ts",
    "build:docs-site": "tsx packages/utilities/scripts/build-hexo-site.ts",
    "build:docs-site-legacy": "tsx packages/utilities/scripts/build-docs-site.ts",
    "migrate:docs-to-hexo": "tsx packages/utilities/scripts/migrate-docs-to-hexo.ts",
    "build:watch": "tsx packages/utilities/scripts/build.ts --watch",
    "prepublishOnly": "npm run build",
    "lint": "node --max-old-space-size=8192 ./node_modules/.bin/eslint .",
    "lint:fix": "node --max-old-space-size=8192 ./node_modules/.bin/eslint . --fix",
    "format": "prettier .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "baselines:establish": "tsx packages/utilities/scripts/establish-baselines.ts",
    "test": "bun run test:unit",
    "test:actions": "tsx packages/utilities/scripts/test-actions.ts",
    "test:unit": "vitest run --dir tests/unit",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:mockup": "vitest run --dir tests/mockup",
    "test:regression": "vitest run --dir tests/regression",
    "test:docs": "vitest run tests/unit/build-hexo-site.test.ts tests/regression/hexo-documentation-build.test.ts tests/regression/documentation-workflow.test.ts",
    "test:docs-e2e": "vitest run tests/e2e/docs-site.test.ts",
    "test:performance": "vitest run --dir tests/performance",
    "test:coverage": "vitest run --coverage",
    "validate:docs-links": "tsx packages/utilities/scripts/validate-docs-links.ts",
    "docs:generate-blog-posts": "tsx packages/utilities/scripts/generate-missing-blog-posts.ts",
    "deploy": "tsx packages/utilities/scripts/deploy.ts",
    "deploy:no-profiler": "PROFILER_ENABLED=false tsx packages/utilities/scripts/deploy.ts",
    "version:bump": "tsx packages/utilities/scripts/bump-version.ts",
    "version:bump-semantic": "tsx packages/utilities/scripts/bump-version-semantic.ts",
    "version:release": "tsx packages/utilities/scripts/release-changelog.ts",
    "versions:update": "tsx packages/utilities/scripts/update-version-index.ts",
    "analyze:system": "tsx packages/utilities/scripts/evaluate-system.ts",
    "reports:cleanup": "tsx packages/utilities/scripts/cleanup-old-reports.ts",
    "validate:project-config": "tsx packages/utilities/scripts/validate-project-config.ts",
    "prepare": "husky",
    "docker:build": "docker compose build",
    "docker:test": "docker compose run --rm test",
    "docker:test:unit": "docker compose run --rm test npm run test:unit",
    "docker:test:e2e": "docker compose run --rm test npm run test:e2e",
    "docker:test:mockup": "docker compose run --rm mockup",
    "docker:test:regression": "docker compose run --rm test npm run test:regression",
    "docker:test:performance": "docker compose -f docker-compose.test.yml up --abort-on-container-exit performance-tests",
    "docker:test:coverage": "docker compose run --rm test npm run test:coverage",
    "docker:build:ai": "docker compose run --rm build",
    "docker:lint": "docker compose run --rm lint",
    "docker:format": "docker compose run --rm format",
    "docker:dev": "docker compose up dev",
    "docker:shell": "docker compose run --rm test bash"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.10",
    "screeps-api": "^1.16.1",
    "screeps-cartographer": "^1.8.13",
    "semver": "^7.7.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^7.0.3",
    "@types/screeps": "^3.3.8",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.1",
    "bun-plugin-screeps": "^1.0.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "hexo": "^8.0.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-search": "^2.4.3",
    "hexo-generator-tag": "^2.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^7.0.1",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-server": "^3.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "marked": "^16.4.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.4.3",
    "vitest": "^4.0.1",
    "yaml": "^2.8.1"
  },
  "overrides": {
    "axios": "^1.13.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,mjs,cjs,json,md,yml,yaml}": [
      "prettier --write"
    ],
    ".github/workflows/*.{yml,yaml}": [
      "yamllint"
    ]
  }
}
