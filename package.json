{
  "name": "screeps-gpt",
  "version": "0.1.0",
  "description": "Autonomously evolving Screeps AI with automated development and deployment workflows.",
  "license": "MIT",
  "author": "OpenAI Automations",
  "type": "module",
  "packageManager": "bun@1.1.30",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "build:watch": "bun run scripts/build.ts --watch",
    "lint": "bunx eslint . --ext .ts",
    "lint:fix": "bunx eslint . --ext .ts --fix",
    "format": "bunx prettier .",
    "format:check": "bunx prettier --check .",
    "format:write": "bunx prettier --write .",
    "test": "bun run test:unit",
    "test:unit": "bunx vitest run --dir tests/unit",
    "test:e2e": "bunx vitest run --dir tests/e2e",
    "test:regression": "bunx vitest run --dir tests/regression",
    "test:coverage": "bunx vitest run --coverage",
    "deploy": "bun run scripts/deploy.ts",
    "version:bump": "bun run scripts/bump-version.ts",
    "analyze:system": "bun run scripts/evaluate-system.ts"
  },
  "dependencies": {
    "screeps-api": "^1.16.1",
    "semver": "^7.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/screeps": "^3.3.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^7.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.11",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3",
    "vitest": "^3.2.4",
    "typescript-eslint": "^7.18.0",
    "@types/semver": "^7.5.8"
  }
}
