{
  "name": "screeps-gpt",
  "version": "0.1.10",
  "description": "Autonomously evolving Screeps AI with automated development and deployment workflows.",
  "license": "MIT",
  "author": "OpenAI Automations",
  "type": "module",
  "engines": {
    "node": "16.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "build:docs-site": "tsx scripts/build-docs-site.ts",
    "build:watch": "tsx scripts/build.ts --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "npm run test:unit",
    "test:actions": "tsx scripts/test-actions.ts",
    "test:unit": "vitest run --dir tests/unit",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:mockup": "vitest run --dir tests/mockup",
    "test:regression": "vitest run --dir tests/regression",
    "test:coverage": "vitest run --coverage",
    "deploy": "tsx scripts/deploy.ts",
    "version:bump": "tsx scripts/bump-version.ts",
    "version:bump-semantic": "tsx scripts/bump-version-semantic.ts",
    "versions:update": "tsx scripts/update-version-index.ts",
    "analyze:system": "tsx scripts/evaluate-system.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "screeps-api": "^1.16.1",
    "semver": "^7.7.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/screeps": "^3.3.8",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.7",
    "lint-staged": "^13.3.0",
    "marked": "^16.4.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@screeps/common": "^2.15.5",
    "@screeps/driver": "^5.2.5",
    "@screeps/engine": "^4.2.22",
    "screeps-server-mockup": "^1.5.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,mjs,cjs,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
